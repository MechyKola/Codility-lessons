using System;

class Solution {
    public int solution(int[] A) {
        //find length
        int len = A.Length;
        
        //declare integer for total
        int total = 0;
        
        //find total
        for (int i = 0; i < len; i++)
        {
            total += A[i];
        }
        
        //0s times 1s to find number of pairs
        int pairs = total * (len - total);
        
        if (pairs < 1000000000)
        {
            return pairs;
        }
        else
        {
            return -1;
        }
    }
}
