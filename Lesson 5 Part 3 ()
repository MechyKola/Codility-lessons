using System;

class Solution {
    public int solution(int[] A) {
        //create array with totals
        int len = A.Length;
        int[] total = new int[len];
        float[] mina = new float[len-1];
        int accum = 0;
        
        //fill it with totals
        for(int i = 0; i < len; i++)
        {
            accum += A[i];
            total[i] = accum;
        }

        int min = 0;
        
        //go through and find lowest difference
        //for each starting point
        for(int i = 1; i < len; i++)
        {
            for(int n = i; n < len; n++)
            {
                if(A[n] < min)
                {
                    min = A[n];
                }
            }
            //find average
            mina[i-1] = (min/i);
        }
                
        float average = mina[0];
        
        //go through starting points and find lowest
        for(int i = 0; i < (len-1); i++)
        {
            if(mina[i] < average)
            {
                average = A[i];
                min = i;
            }
        }
        
        return min;
    }
}
